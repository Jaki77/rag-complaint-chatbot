    model_name: "mistralai/Mistral-7B-Instruct-v0.2"
    # Alternatives: "meta-llama/Llama-2-7b-chat-hf", "microsoft/phi-2"
    temperature: 0.3
    max_new_tokens: 512
    top_p: 0.95
    repetition_penalty: 1.1
    
  # Prompt Templates
  prompts:
